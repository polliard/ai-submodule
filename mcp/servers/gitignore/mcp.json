~{
    "name": "gitignore",
    "description": "Manage .gitignore files using templates from multiple sources (GitHub, Toptal, local)",
    "binary": "gitignore",
    "repository": "https://github.com/polliard/gitignore",
    "version": "1.3.0",
    "transport": "stdio",
    "command": [
        "gitignore",
        "serve"
    ],
    "tools": [
        {
            "name": "gitignore_list",
            "description": "List all available gitignore templates from configured sources (local, GitHub, Toptal)",
            "inputSchema": {
                "type": "object",
                "properties": {},
                "required": []
            }
        },
        {
            "name": "gitignore_search",
            "description": "Search for gitignore templates by name pattern",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "pattern": {
                        "type": "string",
                        "description": "Search pattern to filter templates (case-insensitive substring match)"
                    }
                },
                "required": [
                    "pattern"
                ]
            }
        },
        {
            "name": "gitignore_add",
            "description": "Add a gitignore template to .gitignore file in the current directory",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "Template type to add (e.g., 'go', 'github/rust', 'toptal/python')"
                    }
                },
                "required": [
                    "type"
                ]
            }
        },
        {
            "name": "gitignore_delete",
            "description": "Remove a gitignore template section from .gitignore file",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "Template type/section name to remove from .gitignore"
                    }
                },
                "required": [
                    "type"
                ]
            }
        },
        {
            "name": "gitignore_ignore",
            "description": "Add one or more patterns directly to .gitignore file",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "patterns": {
                        "type": "array",
                        "description": "Array of patterns to add to .gitignore (e.g., ['node_modules', '*.log', 'dist/'])"
                    }
                },
                "required": [
                    "patterns"
                ]
            }
        },
        {
            "name": "gitignore_remove",
            "description": "Remove one or more patterns from .gitignore file",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "patterns": {
                        "type": "array",
                        "description": "Array of patterns to remove from .gitignore"
                    }
                },
                "required": [
                    "patterns"
                ]
            }
        },
        {
            "name": "gitignore_init",
            "description": "Initialize .gitignore with configured default template types",
            "inputSchema": {
                "type": "object",
                "properties": {},
                "required": []
            }
        }
    ]
}
