{
    "servers": {
        "gitignore": {
            "type": "stdio",
            "command": "gitignore",
            "args": [
                "serve"
            ]
        },
        "servicenow": {
            "type": "stdio",
            "command": "servicenow-mcp",
            "args": [
                "serve"
            ],
            "env": {
                "SERVICENOW_INSTANCE": "${input:servicenow_instance}",
                "SERVICENOW_USERNAME": "${input:servicenow_username}",
                "SERVICENOW_PASSWORD": "${input:servicenow_password}"
            }
        }
    },
    "inputs": [
        {
            "id": "servicenow_instance",
            "type": "promptString",
            "description": "ServiceNow instance (e.g., mycompany.service-now.com)"
        },
        {
            "id": "servicenow_username",
            "type": "promptString",
            "description": "ServiceNow username"
        },
        {
            "id": "servicenow_password",
            "type": "promptString",
            "description": "ServiceNow password",
            "password": true
        }
    ]
}
